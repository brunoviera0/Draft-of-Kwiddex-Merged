{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "noCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
